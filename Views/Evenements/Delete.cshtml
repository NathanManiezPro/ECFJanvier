@model ECFJanvier.Models.Evenement

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">Confirmer la suppression</h3>
                </div>
                <div class="card-body">
                    <p class="text-center">Êtes-vous sûr de vouloir supprimer cet événement ?</p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Titre</dt>
                        <dd class="col-sm-8">@Model.Titre</dd>
                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.Date.ToString("dd/MM/yyyy HH:mm")</dd>
                        <dt class="col-sm-4">Lieu</dt>
                        <dd class="col-sm-8">@Model.Lieu</dd>
                        <dt class="col-sm-4">Participants</dt>
                        <dd class="col-sm-8">@ViewBag.ParticipantCount participant(s) associé(s)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form method="post" action="@Url.Action("Delete", "Evenements", new { id = Model.Id })">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                        <a href="@Url.Action("Index", "Evenements")" class="btn btn-secondary">Back To List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
